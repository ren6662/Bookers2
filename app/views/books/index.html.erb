<div class='container px-5 px-sm-0'>
 
     <% if @book.errors.any? %>
       <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
       <ul>
        <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
     <div class='row'>
    <div class="col-md-3">
      <%= render 'list', user: current_user, book: @book %>
    </div>

  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>

   <table class="table table-striped">

     <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Option</th>
        <th colspan="3"></th>
       </tr>
     </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(80,80) %></td>
          <td><%= link_to book.book_name, book_path(book.id) %></td>
          <td><%= book.caption %></td>
        </tr>
      <% end %>
    </tbody>
   </table>
  </div>
</div>
</div>



