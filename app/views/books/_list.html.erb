<h2>User Info</h2>
  <table class='table'>
  <tr><%= image_tag @user.get_profile_image(100,100) %></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th></th>
  </tr>
</table>

<h2>画像投稿フォーム</h2>
  <%= form_with model: @book do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>ショップ名</h4>
      <%= f.text_field :book_name %>
    <h4>説明</h4>
      <%= f.text_area :caption %>
    <%= f.submit '投稿' %>
  <% end %>
  
