<div class='container px-5 px-sm-0'>
 <div class='row'>
<div class="col-md-3">
      <%= render 'books/list', user: current_user, book: @book %>
</div>
<div class="col-md-8 offset-md-1">
<h2>Books</h2>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <% @books.each do |book| %>
  <tbody>
    <tr>
      <td>
        <a href="user_path(user.id)"><%= image_tag book.user.get_profile_image(80,80) %></a>
      </td>
      <td><a class="book_path(book.id)" href "book_path(book.id)"><%= book.book_name %></a></td>
      <td><%= book.caption %></td>
    </tr>
  </tbody>
  <% end %>
</table>
</div>
</div>
</div>